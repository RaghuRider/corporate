@using Sitecore.Mvc;
@using Sitecore.Data.Items;
@using Sitecore.Resources.Media;
@using Sitecore.Mvc.Presentation;
@using Sitecore.XA.Foundation.MarkupDecorator.Extensions;
@using Sitecore.XA.Foundation.SitecoreExtensions.Extensions;
@using System.Web.Mvc.Html;
@model AIEnterprise.Feature.Global.Models.FooterModel

<div @Html.Sxa().Component("FooterCopyright", Model.Attributes)>

    @if (Model == null || Model.DataSourceItem == null)
    {
        @Model.MessageIsEmpty
    }
    else
    {
        @Model.MessageEditHere
        <div>
            <div class="footer-site-info">
                @if (Model.CopyRightsText != null)
                {
                    @Html.Raw(Model.CopyRightsText)
                }
            </div>
        </div>
    }
</div>